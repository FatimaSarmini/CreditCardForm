<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.CreditCardView">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/creditcard1"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cardNumberView"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:hint="Card number"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:orientation="horizontal"
            android:gravity="right"
            tools:ignore="NegativeMargin">

            <TextView
                android:id="@+id/cardDateView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_weight="1"
                android:hint="MM/YY"
                android:inputType="date"
                android:padding="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                android:gravity="right"
                tools:ignore="LabelFor,RtlHardcoded" />



        </LinearLayout>


        <TextView
            android:id="@+id/FullNameView"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-32dp"
            android:layout_marginBottom="15dp"
            android:hint="Full Name"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/white"
            android:gravity="left"
            android:textColorHint="@color/white"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/creditcard2"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cardCvvView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="81dp"
            android:layout_marginLeft="140dp"
            android:layout_weight="1"
            android:hint="CVV"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="18sp"
            tools:ignore="LabelFor,RtlHardcoded"
            android:gravity="right"/>


    </LinearLayout>

</RelativeLayout>